USE_OCAMLFIND = false

NATIVE_ENABLED = true
BYTE_ENABLED = true

CC_CONFIG = $(shell $(OCAMLC) -config | grep bytecomp_c_compiler:)
CC = $(nth 1, $(CC_CONFIG))
CFLAGS = $(nth-tl 2, $(CC_CONFIG))
CFLAGS += -I$(shell $(OCAMLC) -where)

OCAMLFLAGS = -g -w @A-4-29-41-44-45 -bin-annot
OCAML_OTHER_LIBS = unix
mkdir -p _build
vmount(-l, src, _build)

.SUBDIRS: _build

    section:
        StaticCLibrary(connect, connect)

    section:
        FILES[] =
	    comm
            protocol
	    commands

	DynamicCLibrary(dllmindstorm-ev3_stubs, connect)
	StaticCLibrary(libmindstorm-ev3_stubs, connect)

	OCAML_LIB_FLAGS = -cclib -lmindstorm-ev3_stubs -cclib -lbluetooth
	OCAMLCFLAGS = -custom

	OCamlLibrary(mindstorm-ev3, $(FILES))

	.PHONY: install uninstall
	install: uninstall mindstorm-ev3.cmxa mindstorm-ev3.a mindstorm-ev3.cma dllmindstorm-ev3_stubs.so libmindstorm-ev3_stubs.a

		ocamlfind install mindstorm-ev3 ../META $(addsuffix .*, $(FILES)) mindstorm-ev3.* connect.* dllmindstorm-ev3_stubs.so libmindstorm-ev3_stubs.a

	uninstall:
		ocamlfind remove mindstorm-ev3 || true

	.DEFAULT: install


    section:
	OCAML_LIBS += mindstorm-ev3
        OCamlProgram(main, main)

        #.DEFAULT: main
