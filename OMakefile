USE_OCAMLFIND = true

NATIVE_ENABLED = true
BYTE_ENABLED = true

CC_CONFIG = $(shell $(OCAMLC) -config | grep bytecomp_c_compiler:)
CC = $(nth 1, $(CC_CONFIG))
CFLAGS = $(nth-tl 2, $(CC_CONFIG))
CFLAGS += -I$(shell $(OCAMLC) -where)

OCAMLFLAGS = -g -w @A-4-29-41-44-45 -bin-annot
mkdir -p _build
vmount(-l, src, _build)

.SUBDIRS: _build

    section:
        StaticCLibrary(connect, connect)

    section:
        OCAML_OTHER_LIBS = unix
        FILES[] =
            ev3_comm
            ev3_protocol
            ev3_commands
            ev3

        DynamicCLibrary(dllmindstorm-ev3_stubs, connect)
        StaticCLibrary(libmindstorm-ev3_stubs, connect)

        OCAML_LIB_FLAGS = -cclib -lmindstorm-ev3_stubs -cclib -lbluetooth
        OCAMLCFLAGS = -custom

        # Next we need to pack...
        OCamlLibrary(mindstorm-ev3, $(FILES))

        .PHONY: install uninstall
        .install.made: mindstorm-ev3.cmxa mindstorm-ev3.a mindstorm-ev3.cma dllmindstorm-ev3_stubs.so libmindstorm-ev3_stubs.a

                ocamlfind remove mindstorm-ev3 || true
                ocamlfind install mindstorm-ev3 ../META $(addsuffix .c*, $(FILES)) *mindstorm-ev3*
                touch $@

        install: .install.made
        uninstall:
		ocamlfind remove mindstorm-ev3 || true

    section:
	OCAMLPACKS[] = mindstorm-ev3

	main: install
        OCamlProgram(main, main)

        .DEFAULT: main
